{% block title %}Final Blog{% endblock %}


{% block header %}
    <!-- Header Section Start -->
    <div class="header">
        <nav class="navbar navbar-default main-navigation" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <!-- Stat Toggle Nav Link For Mobiles -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- End Toggle Nav Link For Mobiles -->
                    <a class="navbar-brand logo" href="index.html"><img src="{{ asset('img/logo.png') }}" alt=""></a>
                </div>
                <!-- brand and toggle menu for mobile End -->

                <!-- Navbar Start -->
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('IS_AUTHENTICATED') %}
                            <li class="nav-item">
                                <a class="nav-link hover:text-gray-200 hover:underline text-center px-4" href="{{ path('app_logout') }}">Logout</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="nav-link hover:text-gray-200 hover:underline text-center px-4" href="{{ path('public_home') }}">Admin</a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_REDAC') %}
                                <li>
                                    <a class="nav-link hover:text-gray-200 hover:underline text-center px-4" href="{{ path('public_home') }}">Article Editor</a>
                                </li>
                            {% endif %}
                        {% else %}
                            <li class="nav-item">
                                <a class="hover:text-gray-200 hover:underline text-center px-4" href="{{ path('app_login') }}"><i class="lnr lnr-enter"></i> Login</a>
                            </li>
                            <li>
                                <a href="{{ path('app_user_new') }}" class="hover:text-gray-200 hover:underline text-center px-4"><i class="lnr lnr-user"></i> Signup</a>
                            </li>
                        {% endif %}
                        <li class="postadd">
                            <a class="btn btn-danger btn-post" href="post-ads.html"><span class="fa fa-plus-circle"></span> Post an Ad</a>
                        </li>
                    </ul>
                </div>
                <!-- Navbar End -->
            </div>
        </nav>
        <!-- Off Canvas Navigation -->
        <div class="navmenu navmenu-default navmenu-fixed-left offcanvas">
            <!--- Off Canvas Side Menu -->
            <div class="close" data-toggle="offcanvas" data-target=".navmenu">
                <i class="fa fa-close"></i>
            </div>
            <h3 class="title-menu">All Pages</h3>
            <ul class="nav navmenu-nav"> <!--- Menu -->

                {% for art in arts %}
                <li><a href="index.html">{{ art.title | capitalize }}</a></li>
                {% endfor %}

                <li><a href="{{ path('app_user_new') }}">Signup</a></li>
            </ul><!--- End Menu -->
        </div> <!--- End Off Canvas Side Menu -->
        <div class="tbtn wow pulse" id="menu" data-wow-iteration="infinite" data-wow-duration="500ms" data-toggle="offcanvas" data-target=".navmenu">
            <p><i class="fa fa-file-text-o"></i> All Pages</p>
        </div>
    </div>
    <!-- Header Section End -->
{% endblock %}{# end header #}


{% block intro %}
    <!-- Start intro section -->
    <section id="intro" class="section-intro">
        <div class="overlay">
            {% block introInner %}
                <div class="container">
                    <div class="main-text">
                        <h1 class="intro-title">Welcome To <span style="color: #3498DB">ClassiX</span></h1>
                        <p class="sub-title">Everything you need to know to become a Web Developer in one handy place</p>
                        {% block search %}
                            <!-- Start Search box -->
                            <div class="row search-bar">
                                <div class="advanced-search">
                                    <form class="search-form" method="get">
                                        <div class="col-md-3 col-sm-6 search-col">
                                            <div class="input-group-addon search-category-container">
                                                <label class="styled-select location-select">
                                                    <select class="dropdown-product selectpicker" name="product-cat" >

                                                        {# REPLACE THESE WITH A LOOP #}
                                                        <option value="0">All Authors</option>

                                                        {% for author in authors %}
                                                            {% if "ROLE_REDAC" in author.roles %}
                                                            <option class="subitem" value="{{ author.username }}"> {{ author.username | capitalize }}</option>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </select>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-6 search-col">
                                            <div class="input-group-addon search-category-container">
                                                <label class="styled-select location-select">
                                                    <select class="dropdown-product selectpicker" name="product-cat" >

                                                        <option value="0">All Categories</option>
                                                        {% for cat in cats %}
                                                            <option value="{{ cat.sectionTitle }}">{{ cat.sectionTitle | capitalize }}</option>
                                                        {% endfor %}

                                                    </select>
                                                </label>
                                            </div>


                                        </div>
                                        <div class="col-md-3 col-sm-6 search-col">
                                            <div class="input-group-addon search-category-container">
                                                <label class="styled-select location-select">
                                                    <select class="dropdown-product selectpicker" name="product-cat" >

                                                        <option value="0">All Tags</option>
                                                    {% for tag in tags %}
                                                        <option value="{{ tag.tagName }}">{{ tag.tagName | capitalize }}</option>
-                                                   {% endfor %}


                                                    </select>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-6 search-col">
                                            <div class="input-group-addon search-category-container">
                                                <label class="styled-select location-select">
                                                    <select class="dropdown-product selectpicker" name="product-cat" >


                                                        <option value="0">All Articles</option>

                                                        {% for art in arts %}
                                                            <option value="{{ art.title }}">{{ art.title | capitalize }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </label>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- End Search box -->
                        {% endblock %}

                    </div>
                </div>
            {% endblock %}
        </div>
    </section>
    <!-- end intro section -->
{% endblock %}



