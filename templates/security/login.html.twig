{% extends 'main/index.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block introInner %}



    <div class="page-header" style="background: url({{ asset('img/banner1.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-wrapper">
                        <h2 class="page-title">Login to account</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block featured %}
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
                    <div class="">
                        <h3 class="text-white">
                            Login
                        </h3>
                        <form role="form" class="login-form" method="post">

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <div class="form-group">
                                <div class="input-icon">
                                    <i class="icon fa fa-user"></i>
                                    <input type="text"value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-icon">
                                    <i class="icon fa fa-unlock-alt"></i>
                                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <button class="btn btn-common log-btn" type="submit">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block services %}{% endblock %}
{% block counter %}{% endblock %}