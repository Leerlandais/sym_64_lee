{% extends 'main/index.html.twig' %}

{% block title %}Article Title{% endblock %}

{% block introInner %}



    <div class="page-header" style="background: url({{ asset('img/banner1.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-wrapper">
              {#           <h2 class="page-title">{{ section.sectionTitle }}</h2> #}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block services %}

        <div class="container">
            <div class="row">
                {% for art in article %}
                    <div class="">
                        <div class="features-box wow fadeInDownQuick" data-wow-delay="0.3s">
                            <div class="features-icon">
                                <i class="fa fa-book">
                                </i>
                            </div>
                            <div class="features-content">
                                <h4>
                                    {{ art.title | capitalize }} <span class="pull-right fa fa-user"> </span><span class="pull-right"> <a href="{{ path('public_author', { id: art.user.id }) }}"> {{ art.user.username }}</a></span>
                                </h4>
                                <p>
                                    {{ art.text }}
                                </p>
                                <span class="pull-right">{{ art.articleDatePosted|date("F j, Y") }}</span> {# add this if I want the time : , g:i a #}

                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>

{% endblock %}
{% block featured %}{% endblock %}
{% block counter %}{% endblock %}