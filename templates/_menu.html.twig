<!-- Navbar Start -->
<div class="collapse navbar-collapse" id="navbar">
    <ul class="nav navbar-nav navbar-right">
        {% if is_granted('IS_AUTHENTICATED') %}
            <li class="nav-item">
                <a class="nav-link hover:text-gray-200 hover:underline text-center px-4" href="{{ path('app_logout') }}">Logout</a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a class="nav-link hover:text-gray-200 hover:underline text-center px-4" href="{{ path('app_article_update', { author: user }) }}">Admin</a>
                </li>
            {% elseif is_granted('ROLE_REDAC') %}
                <li>
                    <a class="nav-link hover:text-gray-200 hover:underline text-center px-4" href="{{ path('app_article_update', { author: user }) }}">Article Editor</a>
                </li>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REDAC') %}
                <li class="postadd">
                    <a class="btn btn-success btn-post" href="{{ path("app_article_new") }}"><span class="fa fa-plus-circle"></span> Add an Article</a>
                </li>
            {% endif %}

        {% else %}
            <li class="nav-item">
                <a class="hover:text-gray-200 hover:underline text-center px-4" href="{{ path('app_login') }}"><i class="lnr lnr-enter"></i> Login</a>
            </li>
            <li>
                <a href="{{ path('app_user_new') }}" class="hover:text-gray-200 hover:underline text-center px-4"><i class="lnr lnr-user"></i> Signup</a>
            </li>
        <li class="postadd">
            <a class="btn btn-danger btn-post" href="#ads"><span class="fa fa-plus-circle"></span> Post an Ad</a>
        </li>
        {% endif %}
    </ul>
</div>
<!-- Navbar End -->